<!DOCTYPE html>
<html>
<head>
	<title='Melon Forum'>
	<link rel='stylesheet' href='index.css'>
</head>
<body>
	<header>
		<h1>Melon Forum</h1>
	</header>

	<%= form_tag('posts#create', method: 'post') do %>
		<%= label_tag(:title, 'Title') %> <br>
		<%= text_field_tag(:title) %> <br>
		<%= label_tag(:content, 'Content') %> <br>
		<%= text_field_tag(:content) %> <br>
		<%= submit_tag('New Post') %>
	<% end %>

	<section id='all-posts-wrapper'>
		<% @posts.each do |post| %>
			<div class='post-wrapper'>
				<%= link_to post.title, post_path(post) %>
				<p><%= truncate(post.content, length: 180, omission: '... (continued)') %></p>
			</div>
		<% end %>
	</section>
	
</body>
</html>